---
import Layout from "../layouts/Layout.astro";

import Skills from "../components/Skills.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section>
      <span class="h1-span">Hey! I'm</span>
      <h1 class="stroke-text">Dario Nalerio</h1>
      <h2>
        A passionate <span class="h2-span">web developer</span> crafting digital
        experiences
      </h2>

      <div class="hero-section-container">
        <Skills />
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    text-align: center;
    text-wrap: pretty;
    margin: 6rem auto;
  }

  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem 0;
    gap: 0.25rem;
  }

  .hero-section-container {
    display: flex;
    flex-direction: column;

    gap: 1rem;
    margin-top: 2rem;
  }
  h1 {
    text-transform: uppercase;
    letter-spacing: 0.25rem;
  }
  .h1-span {
    font-size: var(--font-size-lg);
    font-weight: 700;
    opacity: 0.9;
    text-transform: uppercase;
  }

  h2 {
    text-wrap: balance;
    margin-top: 1rem;
    font-size: var(--font-size-xs);
    color: var(--primary-500);
    opacity: 0.9;
  }

  .h2-span {
    color: var(--accent-500);
  }
  .h2-span:after {
    content: ",";
    color: var(--primary-500);
  }

  .stroke-text {
    color: transparent;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: var(--text);
    transition: all 0.3s;
  }

  .stroke-text:hover {
    color: var(--text);
    scale: 1.1;
    filter: drop-shadow(0 0 0.1rem rgba(0, 0, 0, 0.5));
  }

  /* Non-WebKit browsers support */
  @supports (text-stroke: 1px black) {
    .stroke-text {
      text-stroke-width: 1px;
      text-stroke-color: var(--text);
    }
  }
</style>
