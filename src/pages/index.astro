<style>
  main {
    display: flex;
    flex-direction: column;
    text-align: center;
    text-wrap: pretty;
    margin: 6rem auto;
  }

  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem 0;
    gap: 0.25rem;
  }

  .hero-section-container {
    display: flex;
    flex-direction: column;

    gap: 1rem;
    margin-top: 2rem;
  }
  h1 {
    text-transform: uppercase;
  }
  .h1-span {
    font-size: var(--font-size-lg);
    font-weight: 700;
    opacity: 0.8;
    text-transform: uppercase;
  }

  h2 {
    text-wrap: balance;
    margin-top: 1rem;
    font-size: var(--font-size-xs);
    color: var(--secondary-600);
    opacity: 0.9;
  }

  .h2-span {
    color: var(--primary-300);
  }
</style>
