---
import DiagonalArrow from "../Icons/DiagonalArrow.astro";
import Docker from "../Icons/Docker.astro";
import PostgreSQL from "../Icons/PostgreSQL.astro";
import React from "../Icons/React.astro";
import TailwindCss from "../Icons/TailwindCss.astro";
import TypeScript from "../Icons/TypeScript.astro";
import Node from "../Icons/Node.astro";
import Css from "../Icons/Css.astro";
import Html from "../Icons/Html.astro";

type Icon =
  | "html"
  | "css"
  | "tailwind"
  | "typescript"
  | "postgresql"
  | "docker"
  | "node"
  | "react";

interface Props {
  date: string;
  role: string;
  company: string;
  description: string;
  icons: Icon[];
  url: string;
}

const iconsObj = {
  tailwind: TailwindCss,
  typescript: TypeScript,
  postgresql: PostgreSQL,
  docker: Docker,
  node: Node,
  react: React,
  html: Html,
  css: Css,
};

const { date, role, company, description, icons, url } = Astro.props;
---

<a href={url} class="card" target="_blank" rel="noreferrer">
  <div class="card-header">
    <p class="card-date">{date}</p>
    <DiagonalArrow class="card-arrow" />
  </div>
  <div class="card-header card-header-mb">
    <h4>{role}</h4>
    <p>{company}</p>
  </div>
  <p class="card-description">
    {description}
  </p>

  <!-- Card Footer -->
  <div class="icons-container">
    {
      icons.map((icon) => {
        const IconComponent = iconsObj[icon];
        return <IconComponent class="icon" />;
      })
    }
  </div>
</a>

<style>
  .card {
    padding: 1.5rem;
    border-radius: 5px;
    max-width: 1200px;
    color: var(--text-400);
    background-color: var(--background-300);
    border: 1px solid var(--background-600);
  }

  .card-date {
    font-weight: 700;
    font-size: var(--font-size-4xs);
    color: var(--text-400);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-3xs);
    font-weight: 700;
    margin: 0.5rem 0;
  }

  @media (max-width: 420px) {
    .card-header {
      align-items: start;
    }
  }

  @media (max-width: 420px) {
    .card-header-mb {
      flex-direction: column;
      align-items: start;
      gap: 0.5rem;
    }
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .icons-container {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .card-arrow {
    color: var(--text-400);
    transition: transform 0.4s ease-in-out;
  }

  .card:hover .card-header {
    color: var(--primary-300);
  }

  .card:hover .card-arrow {
    color: var(--primary-300);
    transform: translate(0.5rem, -0.5rem);
  }

  .card-description {
    color: var(--text-200);
  }
</style>
